<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="210.0" prefWidth="600.0" stylesheets="@../style/Custom.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="comparer.controller.MainController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="600.0" styleClass="background" stylesheets="@../style/Custom.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <GridPane prefWidth="600.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="520.0" minWidth="10.0" prefWidth="480.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="120.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="firstDirSelectBtn" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#choseFirstDirectory" text="%Select" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Button>
                  <Button fx:id="secondDirSelectBtn" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#choseSecondDirectory" text="%Select" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Button>
                  <Label fx:id="firstDirLbl" text="%FirstDirectory">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Label>
                  <Label fx:id="secondDirLbl" text="%SecondDirectory" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Label>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" top="5.0" />
               </BorderPane.margin>
            </GridPane>
         </center>
         <bottom>
            <GridPane prefHeight="77.0" prefWidth="600.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="500.0" minWidth="10.0" prefWidth="480.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="295.0" minWidth="10.0" prefWidth="120.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="27.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="executeButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#executeComparing" text="%Compare" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Button>
                  <Label fx:id="infoLbl" text="%InfoDefault">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin></Label>
                  <Label fx:id="resultLbl" text="%Result" GridPane.rowIndex="1">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin>
                  </Label>
                  <Button fx:id="openResultBtn" mnemonicParsing="false" onAction="#openResult" text="%Open" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
                     </GridPane.margin>
                  </Button>
               </children>
               <BorderPane.margin>
                  <Insets bottom="5.0" top="5.0" />
               </BorderPane.margin>
            </GridPane>
         </bottom>
         <top>
            <HBox prefHeight="42.0" prefWidth="600.0" styleClass="hbox" stylesheets="@../style/Custom.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="changeLocalButton" mnemonicParsing="false" onAction="#changeLocale" text="%ChangeLocal">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin></Button>
                  <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#clear" text="%Clear">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#openSettings" text="%Settings">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="aboutBtn" mnemonicParsing="false" onAction="#showAppInfo" text="%AppInfo">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#doExitApp" stylesheets="@../style/CustomRed.css" text="%Exit">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
